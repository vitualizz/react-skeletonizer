{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "react-skeletonizer": ["./src"]
    },
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "strict": true,
    "target": "ESNext",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": ["src", "demo"]
}

